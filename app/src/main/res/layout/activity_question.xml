<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- App Bar -->
    <Toolbar
        android:id="@+id/upper_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginTop="6dp"
                android:background="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Questions"
                android:textSize="35sp"
                android:layout_centerInParent="true"
                android:textColor="@color/LoginBtn"
                android:fontFamily="@font/montserrat_semibold" />
        </RelativeLayout>
    </Toolbar>

    <!-- Divider -->
    <View
        android:id="@+id/upper_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/upper_toolbar"
        android:background="@color/LoginBtn" />

    <!-- Shadow -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/upper_divider"
        android:background="@drawable/toolbar_shadow" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/upper_divider"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Difficulty and XP badges -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/difficultyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Medium"
                    android:textColor="@color/LoginBtn"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="16sp"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/xpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"
                    android:text="20 XP"
                    android:textColor="@color/LoginBtn"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_xp"
                    android:drawablePadding="8dp" />
            </LinearLayout>

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/questionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="How do you say 'Hello' in Spanish?"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineSpacingExtra="4dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Options -->
            <GridLayout
                android:id="@+id/optionsGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_margin="12dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="8dp">

                <!-- Option 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/optionCard0"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <RadioButton
                        android:id="@+id/option1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hola"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:fontFamily="@font/montserrat_medium"/>
                </androidx.cardview.widget.CardView>

                <!-- Option 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/optionCard1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <RadioButton
                        android:id="@+id/option2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="AdiÃ³s"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:fontFamily="@font/montserrat_medium"/>
                </androidx.cardview.widget.CardView>

                <!-- Option 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/optionCard2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <RadioButton
                        android:id="@+id/option3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Gracias"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:fontFamily="@font/montserrat_medium"/>
                </androidx.cardview.widget.CardView>

                <!-- Option 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/optionCard3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <RadioButton
                        android:id="@+id/option4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Por favor"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:fontFamily="@font/montserrat_medium"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/LoginBtn"
                android:text="Submit Answer"
                android:textSize="16sp"
                android:layout_margin="12dp"
                android:textColor="@color/LoginBtn"
                android:background="@drawable/rounded_button_background"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingVertical="12dp" />

            <!-- Explanation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/explanationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explanation"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:fontFamily="@font/montserrat_semibold"/>

                    <TextView
                        android:id="@+id/explanationTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hola means 'Hello'."
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:fontFamily="@font/montserrat_medium"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
